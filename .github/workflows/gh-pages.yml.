name: GitHub Pages

on:
  push:
    branches:
      - main  # Cambia 'main' a la rama principal de tu repositorio si es diferente

jobs:
  build:
    runs-on: ubuntu-latest

    steps:
      - name: Checkout
        uses: actions/checkout@v2

      - name: Deploy
        uses: peaceiris/actions-gh-pages@v3
        with:
          github_token: ${{ secrets.GITHUB_TOKEN }}
          publish_dir: .  # Cambia esto si tu archivo `index.html` está en una carpeta específica
